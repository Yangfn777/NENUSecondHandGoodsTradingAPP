<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.join.GoodsTradingProgram.mapper.msgMapper.MsgMapper">
    <resultMap id="goods" type="com.join.GoodsTradingProgram.entity.msg.Msg">
        <id property="id" column="id"/>
        <result property="uid" column="uid"/>
        <result property="gid" column="gid"/>
        <result property="date" column="date"/>
    </resultMap>

    <select id="listAll" resultType="com.join.GoodsTradingProgram.entity.msg.Msg">
    SELECT *
    FROM t_msg
    </select>

    <select id="queryId" resultType="com.join.GoodsTradingProgram.entity.msg.Msg">
    SELECT *
    FROM t_msg
    where uid=#{id}
    </select>


    <!--<update id="updateFeelBack">-->
    <!--UPDATE t_msg-->
    <!--SET status=#{feelback.status}-->
    <!--WHERE id=#{feelback.id}-->
    <!--</update>-->


    <delete id="deleteMsg">
    DELETE FROM t_msg
    WHERE id=#{id}
    </delete>

    <insert id="addMsg" parameterType="com.join.GoodsTradingProgram.entity.msg.Msg">
    INSERT INTO t_msg
    (uid,gid,date,price)
    VALUES (#{feelback.uid},#{feelback.gid},#{feelback.date},#{feelback.price})
    </insert>
</mapper>