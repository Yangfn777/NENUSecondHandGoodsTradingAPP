<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.join.GoodsTradingProgram.mapper.studentMapper.StudentMapper">
    <resultMap id="student" type="com.join.GoodsTradingProgram.entity.student.Student">
        <id property="id" column="id"/>
        <result property="realname" column="realname"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="profession" column="profession"/>
        <result property="stuno" column="stuno"/>
    </resultMap>

    <select id="listStudent" resultType="com.join.GoodsTradingProgram.entity.student.Student">
SELECT * FROM t_student
  </select>

    <select id="login" resultType="com.join.GoodsTradingProgram.entity.student.Student">
select * from t_student where username=#{student.username} and password=#{student.password}
    </select>

    <insert id="addStudent" parameterType="com.join.GoodsTradingProgram.entity.student.Student">
INSERT INTO t_student (realname,username,password,profession,stuno)
values (#{student.realname},#{student.username},#{student.password},#{student.profession},#{student.stuno})
    </insert>

    <select id="selectStumessage" resultType="com.join.GoodsTradingProgram.entity.student.Student">
select * from t_student
where realname=#{student.realname}
and stuno=#{student.stuno}
    </select>

    <delete id="delStudent" parameterType="com.join.GoodsTradingProgram.entity.student.Student">
DELETE from t_student WHERE id=#{id};
    </delete>

    <update id="updatePwd" parameterType="com.join.GoodsTradingProgram.entity.student.Student">
update t_student set password=#{student.password}WHERE id=#{student.id}
    </update>

</mapper>